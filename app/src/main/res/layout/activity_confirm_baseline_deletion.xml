<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rittie.andy.testing.ConfirmBaselineDeletion"
    android:id="@+id/ConfirmBaselineDeletionScreen">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Warning Message"
        android:id="@+id/lblConfirmBaselineDelete"
        android:layout_below="@+id/tool_bar"
        android:layout_marginTop="43dp"
        android:layout_alignLeft="@+id/btnBaselineDeleteYes"
        android:layout_alignStart="@+id/btnBaselineDeleteYes"
        android:layout_alignRight="@+id/btnBaselineDeleteNo"
        android:layout_alignEnd="@+id/btnBaselineDeleteNo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/btnBaselineDeleteNo"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:layout_alignTop="@+id/btnBaselineDeleteYes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/btnBaselineDeleteYes"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp" />

</RelativeLayout>
